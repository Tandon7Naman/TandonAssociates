// Simplified schema for SQLite demo
// For production, use PostgreSQL with full schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// ========================================
// USER MANAGEMENT
// ========================================

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  password      String
  image         String?
  role          String    @default("USER") // USER, ADMIN, MANAGER
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts      Account[]
  sessions      Session[]
  contracts     Contract[]
  cases         Case[]
  compliances   Compliance[]
  comments      Comment[]
  activities    Activity[]

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// ========================================
// CONTRACT MANAGEMENT
// ========================================

model Contract {
  id          String   @id @default(cuid())
  title       String
  description String?
  type        String   // EMPLOYMENT, SERVICE, NDA, LEASE, etc.
  status      String   @default("DRAFT") // DRAFT, UNDER_REVIEW, APPROVED, etc.
  stage       String   @default("INITIATION") // 8-stage workflow
  priority    String   @default("MEDIUM") // LOW, MEDIUM, HIGH, URGENT

  // Parties
  partyA      String
  partyB      String

  // Dates
  startDate      DateTime?
  endDate        DateTime?
  executionDate  DateTime?
  renewalDate    DateTime?
  expiryDate     DateTime?

  // Financial
  value          Float?
  currency       String    @default("INR")

  // AI Analysis (stored as JSON strings)
  aiSummary      String?
  aiKeyTerms     String?   // JSON array
  aiObligations  String?   // JSON array
  aiRedFlags     String?   // JSON array

  // Risk & Compliance
  riskScore      Int?
  complianceScore Int?

  // Metadata
  metadata       String?   // JSON object
  
  userId         String
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  user           User      @relation(fields: [userId], references: [id])
  documents      Document[]
  clauses        Clause[]
  comments       Comment[]
  activities     Activity[]

  @@map("contracts")
}

model Clause {
  id          String   @id @default(cuid())
  contractId  String
  title       String
  content     String
  type        String?  // PAYMENT, TERMINATION, CONFIDENTIALITY, etc.
  riskLevel   String?  // LOW, MEDIUM, HIGH
  aiAnalysis  String?
  position    Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  contract    Contract @relation(fields: [contractId], references: [id], onDelete: Cascade)

  @@map("clauses")
}

// ========================================
// CASE MANAGEMENT
// ========================================

model Case {
  id           String   @id @default(cuid())
  caseNumber   String   @unique
  title        String
  description  String?
  type         String   // CIVIL, CRIMINAL, CONSTITUTIONAL, etc.
  status       String   @default("PENDING") // PENDING, ACTIVE, CLOSED, etc.
  priority     String   @default("MEDIUM")

  // Court Info
  courtName    String?
  courtType    String?  // DISTRICT, HIGH, SUPREME
  caseYear     Int?
  filingDate   DateTime?
  hearingDate  DateTime?

  // Parties
  petitioner   String?
  respondent   String?
  advocate     String?

  // AI Analysis
  aiSummary    String?
  aiPrecedents String?  // JSON array
  aiLegalPoints String? // JSON array

  // CNR Integration
  cnrNumber    String?  @unique
  ecourtsData  String?  // JSON object from eCourts API

  userId       String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  user         User     @relation(fields: [userId], references: [id])
  documents    Document[]
  proceedings  Proceeding[]
  comments     Comment[]
  activities   Activity[]

  @@map("cases")
}

model Proceeding {
  id          String   @id @default(cuid())
  caseId      String
  date        DateTime
  type        String   // HEARING, ORDER, JUDGMENT, etc.
  description String
  outcome     String?
  nextDate    DateTime?
  notes       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  case        Case     @relation(fields: [caseId], references: [id], onDelete: Cascade)

  @@map("proceedings")
}

// ========================================
// COMPLIANCE MANAGEMENT
// ========================================

model Compliance {
  id           String   @id @default(cuid())
  title        String
  description  String?
  type         String   // REGULATORY, STATUTORY, etc.
  status       String   @default("PENDING")
  priority     String   @default("MEDIUM")
  
  // Regulatory Details
  regulation   String?  // Companies Act, GST, etc.
  authority    String?  // MCA, GST Council, etc.
  
  // Dates
  dueDate      DateTime?
  completionDate DateTime?
  reviewDate   DateTime?
  
  // Risk
  riskLevel    String?
  complianceScore Int?
  
  // Requirements (JSON strings)
  requirements String?  // JSON array
  controls     String?  // JSON array
  evidence     String?  // JSON array
  
  userId       String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  user         User     @relation(fields: [userId], references: [id])
  documents    Document[]
  comments     Comment[]
  activities   Activity[]

  @@map("compliances")
}

// ========================================
// DOCUMENT MANAGEMENT
// ========================================

model Document {
  id          String   @id @default(cuid())
  name        String
  type        String   // PDF, DOCX, etc.
  size        Int
  url         String
  mimeType    String?

  // AI Extraction
  extractedText String?
  aiSummary     String?
  aiInsights    String?  // JSON array

  // Relations (optional - can link to multiple entities)
  contractId    String?
  caseId        String?
  complianceId  String?

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  contract      Contract?   @relation(fields: [contractId], references: [id], onDelete: Cascade)
  case          Case?       @relation(fields: [caseId], references: [id], onDelete: Cascade)
  compliance    Compliance? @relation(fields: [complianceId], references: [id], onDelete: Cascade)

  @@map("documents")
}

// ========================================
// COLLABORATION
// ========================================

model Comment {
  id          String   @id @default(cuid())
  content     String
  userId      String
  
  // Can comment on different entities
  contractId  String?
  caseId      String?
  complianceId String?

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user        User       @relation(fields: [userId], references: [id])
  contract    Contract?  @relation(fields: [contractId], references: [id], onDelete: Cascade)
  case        Case?      @relation(fields: [caseId], references: [id], onDelete: Cascade)
  compliance  Compliance? @relation(fields: [complianceId], references: [id], onDelete: Cascade)

  @@map("comments")
}

model Activity {
  id          String   @id @default(cuid())
  action      String   // CREATED, UPDATED, DELETED, etc.
  description String
  userId      String
  
  // Activity can be for any entity
  entityType  String?  // CONTRACT, CASE, COMPLIANCE, etc.
  entityId    String?
  
  // Relations
  contractId  String?
  caseId      String?
  complianceId String?

  createdAt   DateTime @default(now())

  user        User       @relation(fields: [userId], references: [id])
  contract    Contract?  @relation(fields: [contractId], references: [id], onDelete: Cascade)
  case        Case?      @relation(fields: [caseId], references: [id], onDelete: Cascade)
  compliance  Compliance? @relation(fields: [complianceId], references: [id], onDelete: Cascade)

  @@map("activities")
}
